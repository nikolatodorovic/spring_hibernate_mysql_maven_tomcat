<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<definition name=".layouts.master" template="/WEB-INF/jsp/layout/master.jsp">
		<put-attribute name="title" value="" />
		<put-attribute name="header" value="/WEB-INF/jsp/layout/header.jsp" />
		<put-attribute name="body" />		
		<put-attribute name="footer" value="/WEB-INF/jsp/layout/footer.jsp" />
	</definition>
	
	<!-- 
		>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
		First page
		>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
	-->
	
	<definition name="pages.first-page" extends=".layouts.master">
		<put-attribute name="body" value="/WEB-INF/jsp/pages/first-page.jsp" />   
	</definition>
	
	<!-- 
		>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
		Second page
		>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
	-->
	
	<definition name="pages.second-page" extends=".layouts.master">
		<put-attribute name="body" value="/WEB-INF/jsp/pages/second-page.jsp" />   
	</definition>

</tiles-definitions>